<div class="gf-dialog" role="dialog" aria-modal="true" aria-label="{{title}}">
    <header class="gf-dialog-header">
        <h3>{{title}}</h3>
    </header>
    <div class="gf-dialog-body">
        <div class="portrait-grid">
            {{#each portraits as |path index|}}
                <div class="portrait-item">
                    <img src="{{path}}" alt="{{lookup ../labels index}}" class="portrait-img">
                    <label class="portrait-label">{{lookup ../labels index}}</label>
                    <button class="portrait-btn" data-action="config" title="Change label">
                        <i class="fas fa-tag"></i> Label
                    </button>
                    <button class="portrait-btn" data-action="browse" title="Change image">
                        <i class="fas fa-image"></i> Image
                    </button>
                    <button class="portrait-btn" data-action="remove" title="Remove portrait">
                        <i class="fas fa-trash"></i> Remove
                    </button>
                </div>
            {{/each}}
        </div>
    </div>
    <footer class="gf-dialog-footer">
        <button class="gf-btn" data-action="add"><i class="fas fa-plus"></i> Add Portrait</button>
        <button class="gf-btn" data-action="close"><i class="fas fa-x"></i> Close</button>
    </footer>
</div>